{
  "name": "natours",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deploy": "gh-pages -d .",

    "watch:sass": "node-sass-chokidar sass/main.scss css/style.css --watch --usePolling --polling-interval 500",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",

    "compile:sass": "node-sass-chokidar sass/main.scss css/style.comp.css --usePolling --polling-interval 500",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass-chokidar --output-style compressed css/style.prefix.css css/style.css",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "",
  "homepage": "https://sholua.github.io/natours",
  "license": "ISC",
  "devDependencies": {
    "concat": "^1.0.3",
    "gh-pages": "^3.2.3",
    "node-sass-chokidar": "^1.5.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.4"
  }
}
